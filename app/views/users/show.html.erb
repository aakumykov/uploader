<h1>Users#show</h1>

<table width="50%" align="center" border="3" cols="3">
	<tr>
		<td>Имя: </td>
		<td><%= @user.name  %></td>
		<td rowspan="2" align="center" valign="center">
			<%= image_tag @user.avatar.url(:medium) %>
		</td>
	</tr>
	<tr>
		<td>Почта: </td>
		<td><%= @user.email  %></td>
	</tr>
	<tr>
		<td>
			<%= link_to users_path do %>
				<button>Список</button>
			<% end %>
		</td>
		<td>
			<%= link_to edit_user_path(@user) do %>
				<button>Изменить</button>
			<% end %>
		</td>
		<td>
			<%= link_to users_path, method: :delete, data: { confirm: 'Удалить?' } do %>
				<button>Удалить</button>
			<% end %>
		</td>
	</tr>
</table>
