<%= form_for @user do |f| %>
	<label>Тип
		<select name='user[kind]'>
			<% User.kinds.each do |value,id| %>
				<option value="<%= value %>"><%= value %></option>
			<% end %>
		</select>
	</label><br><br>

	<%= f.label :name, 'Имя' %>
	<%= f.text_field :name %><br><br>

	<%= f.label :email, 'Почта' %>
	<%= f.text_field :email %><br><br>
	
	<%= f.label :avatar, 'Лик' %>
	<%= f.file_field :avatar %><br><br>

	<%= f.submit %>
<% end %>

