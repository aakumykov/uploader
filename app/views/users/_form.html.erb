<%= form_for @user do |f| %>
	<%=  render 'errors', object: f.object %>
	
	<%= select_tag 'user[kind]', options_for_select(User.kinds) %>

	<%= f.label :name, 'Имя' %>
	<%= f.text_field :name %><br><br>

	<%= f.label :email, 'Почта' %>
	<%= f.text_field :email %><br><br>
	
	<%= f.label :avatar, 'Лик' %>
	<%= f.file_field :avatar %><br><br>

	<%= f.submit %>
<% end %>

